{
  "name": "libresign",
  "version": "v12.0.0-beta.2",
  "description": "Nextcloud app to sign PDF documents with digital certificates",
  "prerequisites": {
    "apt": [
      "software-properties-common",
      "ca-certificates",
      "lsb-release",
      "apt-transport-https",
      "curl",
      "wget",
      "git",
      "unzip",
      "imagemagick",
      "ghostscript",
      "pdftk",
      "apache2",
      "libapache2-mod-php8.1"
    ],
    "runtimes": [
      "php8.1",
      "node18",
      "java17"
    ],
    "libs": [
      "php8.1-cli",
      "php8.1-fpm",
      "php8.1-common",
      "php8.1-mysql",
      "php8.1-pgsql",
      "php8.1-zip",
      "php8.1-gd",
      "php8.1-mbstring",
      "php8.1-curl",
      "php8.1-xml",
      "php8.1-bcmath",
      "php8.1-intl",
      "php8.1-imagick",
      "php8.1-gmp",
      "php8.1-opcache"
    ],
    "services": [
      "postgresql",
      "apache2"
    ],
    "tools": [
      "composer",
      "npm"
    ]
  },
  "env_exports": {
    "PATH": [
      "/usr/local/bin"
    ]
  },
  "validate_cmd": "libresign --version",
  "requires_compilation": true,
  "installation_method": "nextcloud_app",
  "complexity": "very_high",
  "notes": [
    "LibreSign is a Nextcloud app, not a standalone tool",
    "Requires full Nextcloud installation with PostgreSQL database",
    "Includes PHP, Node.js, Java, and multiple system dependencies",
    "Creates a wrapper script at /usr/local/bin/libresign for CLI access",
    "Nextcloud installed at /opt/nextcloud",
    "Default admin credentials: admin/admin (change immediately!)"
  ]
}
