{
  "name": "openemr",
  "version": "7.0.4",
  "description": "The most popular open source electronic health records and medical practice management solution",
  "prerequisites": {
    "apt": [
      "ca-certificates",
      "wget",
      "curl",
      "git",
      "unzip",
      "gnupg",
      "lsb-release",
      "software-properties-common",
      "php8.2",
      "php8.2-cli",
      "php8.2-common",
      "php8.2-curl",
      "php8.2-gd",
      "php8.2-intl",
      "php8.2-ldap",
      "php8.2-mbstring",
      "php8.2-mysql",
      "php8.2-soap",
      "php8.2-xml",
      "php8.2-xsl",
      "php8.2-zip",
      "default-mysql-client",
      "apache2",
      "libapache2-mod-php8.2",
      "nodejs",
      "libxml2",
      "libxslt1.1",
      "libssl3",
      "libcurl4",
      "libzip4",
      "libonig5",
      "libsodium23"
    ],
    "runtimes": [
      "php",
      "node"
    ],
    "libs": [],
    "services": [
      "mysql",
      "apache2"
    ]
  },
  "env_exports": {
    "PATH": [
      "/usr/local/bin"
    ]
  },
  "validate_cmd": "openemr --version",
  "requires_compilation": true,
  "installation_notes": {
    "composer_version": "2.8.3",
    "nodejs_version": "22.x",
    "php_version": "8.2",
    "mysql_required": true,
    "web_server_required": true,
    "post_install_steps": [
      "Configure web server to point to /opt/openemr",
      "Create MySQL database for OpenEMR",
      "Navigate to http://your-server/openemr/setup.php",
      "Complete web-based setup wizard"
    ]
  }
}
